@model IEnumerable<DBfirst_2106.Models.Student1>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"  class ="btn btn-primary ">Add New</a>
</p>

<p>
    <a asp-action="SameHomeandDept" class="btn btn-secondary"><i class="bi bi-search"></i>  Find Students with Same Home Town and City </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SHomecity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDept)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SHomecity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDept)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SId" class="btn btn-secondary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SId" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
