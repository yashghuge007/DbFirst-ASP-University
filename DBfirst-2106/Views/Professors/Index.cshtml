@model IEnumerable<DBfirst_2106.Models.Professor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"  class ="btn btn-primary ">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PDept)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PDept)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PId" class="btn btn-secondary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PId" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
