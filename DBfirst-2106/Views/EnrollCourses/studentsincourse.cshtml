<script type="text/javascript">
    $(function(){
        $("#prof1").change(function(){
            var profs = $("#prof1 Option:selected").val();
            $("#txtprof").val(profs);
        })
    });
</script>


@{
    ViewData["Title"] = "studentsincourse";
}

<h1>studentsincourse</h1>

<div class="row">
    <div class="col-md-4">
        @using(Html.BeginForm("studentsincourseSearch","EnrollCourses"))
        {
           
             <label  class="control-label">Course Code    </label><br />
             <select asp-for="Courseid" class ="form-control" asp-items="ViewBag.Courseid">
                 <option value="" disabled selected hidden>Select Course</option>
             </select>
            <br /><br />
            <div>
                <label id="Taught By" class="control-label">Taught by      </label><br/>
                

                <input hidden type="text" id="txtprof" name="prof"/>
                 <select id="prof1" class ="form-control" asp-items="ViewBag.Pid">
                     <option value="" disabled selected hidden>Select Professor</option>
                </select>
             </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        }
